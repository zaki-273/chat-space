.Side-bar
  .Side-bar__user
    .Side-bar__user__contents
      .Side-bar__user__contents__name
        = current_user.name
      %ul.Side-bar__user__contents__icon-list
        %li.Side-bar__user__contents__icon
          = link_to new_group_path, method: :get, class: "Side-bar__user__contents__btn" do
            = icon('fas', 'edit')
        %li.Side-bar__user__contents__icon
          = link_to edit_user_path(current_user), class: "Side-bar__user__contents__btn" do
            = icon('fas', 'cog')
  .Side-bar__group-list
    - current_user.groups.each do |group|
      .Side-bar__group-list__info
        = link_to group_comments_path(group), class: "Side-bar__group-list__btn" do
          .Side-bar__group-list__info__name
            = group.name
          .Side-bar__group-list__info__message
            = group.show_last_comment